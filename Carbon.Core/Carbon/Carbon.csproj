  <Target Name="CleanOutput" AfterTargets="Clean">
    <!-- <Message Text=">>> CleanOutput" Importance="high"/> -->
    <Delete Files="$(OutputPath)Carbon.dll" />
    <Delete Files="$(OutputPath)$(TargetName).dll" />
  </Target>

  <Target Name="MoveOutput" AfterTargets="AfterBuild">
    <!-- <Message Text=">>> MoveOutput" Importance="high"/> -->
    <Copy SourceFiles="$(OutputPath)$(TargetName).dll" DestinationFiles="$(OutputPath)Carbon.dll" />

    <PropertyGroup>
      <RandomASM>$(Product)-$([System.DateTime]::UtcNow.ToString('HHmmfff'))</RandomASM>
    </PropertyGroup>

    <Message Text="RandomASM property set to $(RandomASM)" Importance="high" />
    <WriteLinesToFile File="$(SolutionDir)Carbon/.rndasm" Overwrite="true" Lines="$(RandomASM)" />
  </Target>

  <PropertyGroup Condition="!Exists('.rndasm') AND $(Configuration.Contains('Debug'))">
    <AssemblyName>$(Product)-$([System.DateTime]::UtcNow.ToString('HHmmfff'))</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Condition="Exists('.rndasm') AND $(Configuration.Contains('Debug'))">
    <AssemblyName>$([System.Text.RegularExpressions.Regex]::Replace(
		  $([System.IO.File]::ReadAllText('$(SolutionDir)\Carbon\.rndasm')), '\r?\n?', ''))</AssemblyName>
