<Project Sdk="Microsoft.NET.Sdk" DefaultTargets="Build">
	<PropertyGroup>
		<Product>Carbon.Ext.Discord</Product>
		<OutputType>Library</OutputType>
	</PropertyGroup>

	<Import Project="..\.msbuild\Common.props" />
	<Import Project="..\.msbuild\ReferencesRust.props" />

	<ItemGroup>
		<PackageReference Include="Ben.Demystifier" Version="0.4.1" />
		<PackageReference Include="MySql.Data" Version="8.0.32" />
		<PackageReference Include="protobuf-net.Core" Version="3.1.17" />
		<PackageReference Include="protobuf-net" Version="3.1.17" />
		<PackageReference Include="QRCoder" Version="1.4.3" />
		<PackageReference Include="Roslynator.CSharp" Version="4.1.1" />
		<PackageReference Include="SharpCompress" Version="0.32.2" />
		<PackageReference Include="System.IO.Compression" Version="4.3.0" />
		<PackageReference Include="WebSocketSharp-netstandard" Version="1.0.1" />
	</ItemGroup>

	<ItemGroup>
		<Reference Include="$(SolutionDir)..\Rust\$(OperatingSystem)\RustDedicated_Data\Managed\UnityEngine.CoreModule.dll" Private="false" />
	</ItemGroup>

	<Target Name="CarbonRelease" AfterTargets="CarbonPrepareRelease">
		<Copy SourceFiles="$(OutputPath)$(Product).dll" DestinationFolder="$(c_ext)" />
	</Target>
</Project>